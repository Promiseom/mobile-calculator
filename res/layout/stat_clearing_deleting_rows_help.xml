<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_18"
            android:text="Clearing And Deleting Rows"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a guide on how to clear the contents of all the fields in the table or delete all the rows in the table. For guide on carrying out this action on specific rows, see guide on selecting rows."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Clearing the content of fields removes the content returning it to the way it was when it was first added. This can be done when you wish to enter new data into the fields. To do this navigate to the menu and click the 'Clear All Fields' item."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If however you wish to delete all the rows in the table, navigate to the menu and click the 'Delete All Fields' item."/>

    </LinearLayout>
</ScrollView>