<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnShift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Shift"
            android:textColor="@color/black"
            android:backgroundTint="@color/lightGrey"
            android:background="@drawable/calculator_button_background_light_grey"
            style="@style/FunctionKeypadStyle"/>

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Menu"
            android:textColor="@color/black"
            android:backgroundTint="@color/lightGrey"
            android:background="@drawable/calculator_button_background_light_grey"
            style="@style/FunctionKeypadStyle"/>

        <Button
            android:id="@+id/btn_cursor_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="◀"
            android:textColor="@color/black"
            android:backgroundTint="@color/lightGrey"
            android:background="@drawable/calculator_button_background_light_grey"
            style="@style/FunctionKeypadStyle"/>

        <Button
            android:id="@+id/btn_cursor_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="▶"
            android:textColor="@color/black"
            android:backgroundTint="@color/lightGrey"
            android:background="@drawable/calculator_button_background_light_grey"
            style="@style/FunctionKeypadStyle"/>

        <Button
            android:id="@+id/btn_factorial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="n!"
            android:textColor="@color/black"
            android:backgroundTint="@color/lightGrey"
            android:background="@drawable/calculator_button_background_light_grey"
            style="@style/FunctionKeypadStyle"/>

        <Button
            android:id="@+id/btn_constants"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CONST"
            android:textColor="@color/black"
            android:backgroundTint="@color/lightGrey"
            android:background="@drawable/calculator_button_background_light_grey"
            style="@style/FunctionKeypadStyle"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="∛x"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="x^3"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="ⁿ√x"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="10ⁿ"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="eⁿ"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_function_differentiation_integration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="d/dy"
            style="@style/FunctionKeypadStyle" />

        <Button
            android:id="@+id/btn_function_square_root_and_cube_root"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="√x"
            style="@style/FunctionKeypadStyle"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/btn_function_square_and_cube"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="x²"
            style="@style/FunctionKeypadStyle"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/btn_function_exponent_and_n_root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="xⁿ"
            style="@style/FunctionKeypadStyle" />

        <Button
            android:id="@+id/btn_function_log"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="log"
            style="@style/FunctionKeypadStyle"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/btn_function_e"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="e"
            style="@style/FunctionKeypadStyle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="asin"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="acos"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="atan"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_function_permutation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="nPr"
            style="@style/FunctionKeypadStyle"/>

        <Button
            android:id="@+id/btn_function_combination"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="nCr"
            style="@style/FunctionKeypadStyle" />

        <Button
            android:id="@+id/btn_function_hyp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="hyp"
            style="@style/FunctionKeypadStyle"  />

        <Button
            android:id="@+id/btn_function_sin_and_sin_inverse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="sin"
            style="@style/FunctionKeypadStyle" />

        <Button
            android:id="@+id/btn_function_cos_and_cost_inverse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="cos"
            style="@style/FunctionKeypadStyle" />

        <Button
            android:id="@+id/btn_function_tan_and_tan_inverse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="tan"
            style="@style/FunctionKeypadStyle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorAccentBackup"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorAccentBackup"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorAccentBackup"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorAccentBackup"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorAccentBackup"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorAccentBackup"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_function_gcd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="GCD"
            style="@style/FunctionKeypadStyle"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_function_lcm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="LCM"
            style="@style/FunctionKeypadStyle"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_operator_bracket_open"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="("
            style="@style/FunctionKeypadStyle"  />

        <Button
            android:id="@+id/btn_operator_bracket_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text=")"
            style="@style/FunctionKeypadStyle"  />

        <Button
            android:id="@+id/btn_retrieve_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="M-"
            style="@style/FunctionKeypadStyle"  />

        <Button
            android:id="@+id/btn_save_memory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="M+"
            style="@style/FunctionKeypadStyle"  />

    </LinearLayout>

</LinearLayout>