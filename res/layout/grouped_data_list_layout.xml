<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stat_row_height">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <TextView
        android:id="@+id/txt_serial_no"
        android:layout_width="45dp"
        android:layout_margin="@dimen/stat_data_field_margin"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="s/n"/>

    <EditText
        android:id="@+id/txt_upper_boundary"
        android:layout_width="80dp"
        android:layout_margin="@dimen/stat_data_field_margin"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="15sp"
        android:maxLength="5"
        android:hint="150"/>

    <EditText
        android:id="@+id/txt_lower_boundary"
        android:layout_width="80dp"
        android:layout_margin="@dimen/stat_data_field_margin"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="15sp"
        android:maxLength="5"
        android:hint="159"/>

    <TextView
        android:id="@+id/txt_class_mark"
        android:layout_width="80dp"
        android:layout_margin="@dimen/stat_data_field_margin"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:hint="160"/>

    <EditText
        android:id="@+id/txt_freq"
        android:layout_width="80dp"
        android:layout_margin="@dimen/stat_data_field_margin"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:maxLength="5"
        android:textSize="15sp"
        android:hint="5"/>

    <TextView
        android:id="@+id/txt_cum_freq"
        android:layout_width="180dp"
        android:layout_margin="@dimen/stat_data_field_margin"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="5"/>

    </LinearLayout>
</LinearLayout>