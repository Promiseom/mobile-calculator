<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="OFF"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:backgroundTint="@color/darkGrey"
            style="@style/MainKeypadStyle"/>
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:backgroundTint="@color/darkGrey"
            style="@style/MainKeypadStyle"/>
        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:backgroundTint="@color/darkGrey"
            style="@style/MainKeypadStyle"/>

        <Button
            android:id="@+id/btn_backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DEL"
            android:backgroundTint="@color/lightCoral"
            android:background="@drawable/calculator_button_background_light_coral"
            style="@style/MainKeypadStyle"/>

        <Button
            android:id="@+id/btn_ac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/lightCoral"
            android:background="@drawable/calculator_button_background_light_coral"
            android:text="AC"
            style="@style/MainKeypadStyle" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_operator_multiplication"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="×"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_operator_division"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="÷"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/secondaryFunctionTextSize"
            android:text="BIN▶"
            android:textAlignment="center"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="OCT▶"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/secondaryFunctionTextSize"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="DEC▶"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/secondaryFunctionTextSize"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="HEX▶"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/secondaryFunctionTextSize"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_operator_plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_operator_minus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="-"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Rnd"
            android:textAlignment="center"
            android:textSize="@dimen/secondaryFunctionTextSize"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/secondaryFunctionTextSize"
            android:text="Ran#"
            android:textAlignment="center"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="π"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/secondaryFunctionTextSize"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="DRG▶"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/secondaryFunctionTextSize"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="%"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/secondaryFunctionTextSize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="."
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_function_exponent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="EXP"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_ans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="ANS"
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            style="@style/MainKeypadStyle"
            android:backgroundTint="@color/darkGrey"/>
    </LinearLayout>

</LinearLayout>