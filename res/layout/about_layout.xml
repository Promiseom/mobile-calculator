<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator Modules"
        android:textAlignment="center"
        android:textSize="@dimen/cal_module"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/simplified_cal_module"
        android:text="Simplified Calculator Modules"/>

    <TextView
        android:id="@+id/txt_app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        style="@style/NormalTextStyle"
        tools:text="Version 1.2.3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/copyright"
        android:text="Copyright (C) 2018 - 2020"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/aemis_dev"
        android:text="AEMIS DEV. STUDIO"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/app_features"
        android:text="App Features"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text="1.    Simple Calculator"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text="2.    Measures Of Central Tendency"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text="3.    Date Calculator"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text="4.    Number Base Converter"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text="5.    Unit Converter for:"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Volume"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Length"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Weight And Mass"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Temperature"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Pressure"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Energy"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Angle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Time"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     Power"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalTextStyle"
        android:text=" -     And Data Conversion"/>

    <!-- The empty text below has been added to give space below the content of the dialog
    Since the margin given kkgfdoes not affect the content display-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>


  </LinearLayout>
</ScrollView>