<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/date_calculator_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <RadioGroup
                android:id="@+id/date_calculation_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_btn_difference_in_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Difference in dates" />

                <RadioButton
                    android:id="@+id/radio_btn_date_arithmetic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Date Arithmetic" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="From"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_from_date"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:text="November 25, 2017"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>