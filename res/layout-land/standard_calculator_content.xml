<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.aemis.promiseanendah.advancedscientificcalculator.MainActivity">    <LinearLayout        android:id="@+id/txt_operation_division"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="2"        android:background="#dadada"        android:orientation="vertical">        <EditText            android:id="@+id/txt_operation"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            tools:text="2 + 5"            android:textSize="15sp"            android:fontFamily="monospace"            android:gravity="right|center_vertical"            android:background="#dadada"            android:textColor="@color/black"            android:scrollbars="none"            android:paddingLeft="@dimen/activity_horizontal_margin"            android:paddingRight="@dimen/activity_horizontal_margin"/>        <EditText            android:id="@+id/txt_operation_result"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:gravity="right|center_vertical"            android:text="0"            android:background="#dadada"            android:textColor="@color/black"            android:textSize="30sp"            android:textStyle="bold"            android:paddingLeft="@dimen/activity_horizontal_margin"            android:paddingRight="@dimen/activity_horizontal_margin"            />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal">        <Button            android:id="@+id/btn_function_percent"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="%"            android:textSize="@dimen/key_pad_text_size"            android:background="@color/black"            android:textColor="@color/white"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_7"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="7"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_8"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="8"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_9"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="9"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_operator_division"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="รท"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_backspace"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@color/black"            android:textColor="@color/white"            android:text="DEL" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal">        <Button            android:id="@+id/btn_function_square_root"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@color/black"            android:textColor="@color/white"            android:text="SQR"/>        <Button            android:id="@+id/btn_4"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="4"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_5"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="5"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"            />        <Button            android:id="@+id/btn_6"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="6"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_operator_multiplication"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="ร"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_cancel"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="C"            android:background="@color/black"            android:textColor="@color/white"            style="@style/Widget.AppCompat.Button.Borderless"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal">        <Button            android:id="@+id/btn_function_exponent"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@color/black"            android:textColor="@color/white"            android:text="X^" />        <Button            android:id="@+id/btn_1"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="1"            android:textSize="@dimen/key_pad_text_size" />        <Button            android:id="@+id/btn_2"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="2"            android:textSize="@dimen/key_pad_text_size" />        <Button            android:id="@+id/btn_3"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="3"            android:textSize="@dimen/key_pad_text_size" />        <Button            android:id="@+id/btn_operator_minus"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="-"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_cancel_result"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="CE"            android:textColor="@color/white"            android:background="@color/black"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal">        <Button            android:id="@+id/btn_function_inverse"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@color/black"            android:textColor="@color/white"            android:text="1/X" />        <Button            android:id="@+id/btn_plus_minus"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="+/-"            android:textSize="@dimen/key_pad_text_size"            style="@style/Widget.AppCompat.Button.Borderless"/>        <Button            android:id="@+id/btn_0"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="0"            android:textSize="@dimen/key_pad_text_size" />        <Button            android:id="@+id/btn_dot"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="."            android:textSize="@dimen/key_pad_text_size" />        <Button            android:id="@+id/btn_operator_plus"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:text="+"            android:textSize="@dimen/key_pad_text_size" />        <Button            android:id="@+id/btn_equals"            style="@style/Widget.AppCompat.Button.Borderless"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@color/black"            android:textColor="@color/white"            android:text="="            android:textSize="@dimen/key_pad_text_size" />    </LinearLayout></LinearLayout>